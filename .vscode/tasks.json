{
    "version": "2.0.0",
    "tasks": 
    [
        {
            "type":  "shell",
            "label": "Dbg",
            "command": "/usr/bin/g++",
            "args": 
            [
                "-g3",
				"-O0",
				"${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"		
            ],
            "options": 
            {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": 
            [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type":  "shell",
            "label": "Release_bench",
            "command": "/usr/bin/g++",
            "args": 
            [
                "-O3",
                "-march=znver2",
                "-isystem",
                "benchmark/include",
                "-Lbenchmark/build/src",                
                "${file}",
                "-lbenchmark",
                "-lpthread",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"		
            ],
            "options": 
            {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": 
            [
                "$gcc"
            ],
            "group": "build"
        }        
    ]
}